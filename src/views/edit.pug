extends base.pug

block content
    h4 Update video
    if(errorMessage)
        span=errorMessage
    else 
        form(method="POST")
            input(type="text" name="title" placeholder="title" value=video.title, required)
            input(placeholder="Description", required, type="text", name="description", value=video.description, minlength="20")
            input(placeholder="Hashtags, separated by commas.", required, type="text", value=video.hashtags.join(), name="hashtags")
            input(type="submit" value="Save")